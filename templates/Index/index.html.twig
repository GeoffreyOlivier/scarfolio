<!-- Gallery Area Start -->
<div class="alime-portfolio-area section-padding-80 clearfix">
    <div class="container-fluid body_page">
        <div class="row">
            <div class="col-12">
                <!-- Projects Menu -->
                <div class="alime-projects-menu">
                    <div class="portfolio-menu text-center">
                        {% if game is empty %}
                            <button class="btn active" data-filter=".game">Game Design</button> 
                        {% endif %} 
                        <button type="button" class="btn" data-filter="none" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Modèle 3D
                        </button>
                        <div class="dropdown-menu">
                            {% for modele in modele %}
                            <button class="dropdown-item" data-filter=".{{ modele.id }}">{{ modele.libelle }}</button> {% endfor %}
                        </div>
                        {% if level is empty %}
                            <button class="btn" data-filter=".level">Level Design</button> 
                        {% else %}
                            <button type="button" class="btn" data-filter="none" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Level Design
                            </button>
                            <div class="dropdown-menu">
                                {% for level in level %}
                                    <button class="dropdown-item" data-filter=".{{ level.id }}">{{ level.libelle }}</button> 
                                {% endfor %}
                                <button class="dropdown-item" data-filter=".level_autre">Autre</button>
                            </div>
                        {% endif %}
                        
                        <button class="btn" data-filter=".dessin">Dessin</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Main Header Start -->
        <div class="row alime-portfolio mb-5">
            <!-- Single Gallery Item -->
            {% set actual_folder = false %} {% for photo in photo %} {% if photo.dossier != null %} {% if actual_folder != photo.dossier.id %} {% set actual_folder = photo.dossier.id %}
            <div class="col-12 col-sm-6 col-lg-3 single_gallery_item {{ photo.dossier.id }}  wow fadeInUp" data-wow-delay="100ms">
                <h1>{{ photo.dossier.libelle }}</h1>
                <p>{{ photo.dossier.description }}</p>
            </div>
            {% endif %}
            <div class="col-12 col-sm-6 col-lg-3 single_gallery_item {{ photo.dossier.id }} mb-30 wow fadeInUp" data-wow-delay="100ms">
                <div class="single-portfolio-content">
                    <img src="{{ asset("uploads/" ~ photo.image) }}" alt="">
                    <div class="hover-content">
                        <a href="{{ asset("uploads/" ~ photo.image) }}" class="portfolio-img">+</a>
                    </div>
                </div>
            </div>
            {% else %}
            <div class="col-12 col-sm-6 col-lg-3 single_gallery_item {{ photo.categorie.libelle }} mb-30 wow fadeInUp" data-wow-delay="100ms">
                <div class="single-portfolio-content">
                    <img src="{{ asset("uploads/" ~ photo.image) }}" alt="">
                    <div class="hover-content">
                        <a href="{{ asset("uploads/" ~ photo.image) }}" class="portfolio-img">+</a>
                    </div>

                </div>
            </div>
            {% endif %} {% endfor %}
        </div>
    </div>






    <!-- Gallery Area End -->
